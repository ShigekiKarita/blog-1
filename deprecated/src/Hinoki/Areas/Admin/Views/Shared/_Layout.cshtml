@model Hinoki.Areas.Admin.Models.VMAdminBase

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@Model.PageTitle</title>
    @RenderSection("styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">管理画面</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">ブログ</a></li>
                        <li><a href="#">ブックマーク</a></li>
                        <li><a href="#">RSS</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <span class=".glyphicon .glyphicon-user"></span>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Model.AccountName<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("SignOut","Account")">サインアウト</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="site-container" class="container-fluid">
        <div class="row">
            <div class="col-sm-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li class="active"><a href="@Url.Action("Index","Dashboard")">概要 <span class="sr-only">(current)</span></a></li>
                    <li><a href="@Url.Action("New","Article")">記事作成</a></li>
                    <li><a href="@Url.Action("Index","Article")">記事一覧</a></li>
                    <li><a href="@Url.Action("Index","Category")">カテゴリ</a></li>
                    <li><a href="#">タグ</a></li>
                    <li><a href="@Url.Action("Index","Config")">設定</a></li>
                </ul>
            </div>
            <div id="main" class="col-sm-10 col-sm-offset-2">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer id="admin-site-footer">
        <p>&copy; @DateTime.Now.Year - hiroakit.com</p>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
