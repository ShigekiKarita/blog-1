@model Hinoki.Models.VMArchive
@using Hinoki.Core

@section styles
{
    @Styles.Render("~/Content/archive")
}

@section SideBar
{
    @*@Html.Action("Ad", "SideBar")*@
    @Html.Action("Categories", "SideBar")
    @Html.Action("Articles", "SideBar")
    @*@Html.Action("AdsenseLong", "SideBar")*@
}

<article id="archive">
    <header class="page-header">
        <h1 class="page-title">@string.Format("{0}年{1}月の記事", Model.Year, Model.Month)</h1>
    </header>
    @Html.Partial("_Articles", Model.PublicArticles)
    <footer class="page-footer">
        <!-- dispAd(300x250)forArticleFooter -->
