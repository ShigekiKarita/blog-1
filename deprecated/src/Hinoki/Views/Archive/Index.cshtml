    </footer>
</article>
<nav style="text-align:center">
    <ul class="pagination">
        @if (Math.Ceiling(((double)Model.TotalArticleCount / (double)Model.L)) > (double)Model.P)
        {
            <li>@Html.ActionLink("前のページ", "Index", "Archive", new { p = (Model.P + 1), l = Model.L }, null)</li>
        }

        @if (Model.P > 1)
        {
            <li>@Html.ActionLink("次のページ", "Index", "Archive", new { p = (Model.P - 1), l = Model.L }, null)</li>
        }
    </ul>
</nav>